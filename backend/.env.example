# Configuration de base
NODE_ENV=development
PORT=5001

# Base de données MongoDB
DB_ENVIRONMENT=local
MONGODB_URI_LOCAL=mongodb://localhost:27017/cardify
MONGODB_URI_ATLAS=mongodb+srv://username:password@cluster.mongodb.net/cardify

# JWT Secret (minimum 32 caractères)
JWT_SECRET=cardify_super_secret_jwt_key_2024_exam_project_secure_token_generator_32_chars

# CORS
FRONTEND_URL=http://localhost:3000

# Email Configuration (Nodemailer avec Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Database Seeding
INIT_DB=false
