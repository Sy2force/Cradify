{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "cardify-backend",
  "version": "1.0.0",
  "description": "Business Cards Management API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "echo 'No build step required for Node.js'",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --watch --detectOpenHandles",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "seed": "node src/utils/generateInitialData.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.10",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "keywords": [
    "api",
    "cards",
    "business",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Cardify Team",
  "license": "MIT"
}
